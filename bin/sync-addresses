#!/bin/sh

set -e

. "$HOME/.env"

older-than "$HOME/personal-addresses" a 24h

TMP="$HOME/personal-addresses.tmp"

echo "" >> "$TMP"

if [ -f "$HOME/.goobook_auth.json" ]; then
   goobook query '' >> "$TMP"
   < $TMP grep -v '^	' | sort | sponge $TMP
fi

notmuch address date:..2099-12-13 | addrspec-to-tabs | sort >> $TMP

< $TMP addrs "$HOME/var/mail/gmail.sent/cur/*" | sponge $TMP
mv $TMP "$HOME/personal-addresses"
