#!/bin/dash

set -e

. "$HOME/.env"

TMP="$HOME/addresses.tmp"

echo "" >> "$TMP"

if [ -f "$HOME/.goobook_auth.json" ]; then
   goobook query '' >> "$TMP"
   < $TMP grep -v '^	' | sort | sponge > $TMP
fi

addrlookup --mutt '' | grep -v '^	' | grep '.' | sort >> $TMP

< $TMP addrs "$HOME/var/mail/gmail.sent/cur/*" | sponge $TMP
mv $TMP "$HOME/addresses"
