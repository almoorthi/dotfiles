#!/usr/bin/env perl

use 5.22.0;
use warnings;

use WWW::Mechanize;

my $mech = WWW::Mechanize->new;

$mech->get('https://ziprecruiter1.bamboohr.com/login.php');

$mech->submit_form(
   form_number => 1,
   fields => {
      username => $ENV{BAMBOO_USER},
      password => $ENV{BAMBOO_PASSWORD},
   }
);

die "Failed to login" unless $mech->success;

$mech->get('https://ziprecruiter1.bamboohr.com/employee_directory/ajax/get_directory_info');

die "Failed to get listing" unless $mech->success;

print $mech->content;
